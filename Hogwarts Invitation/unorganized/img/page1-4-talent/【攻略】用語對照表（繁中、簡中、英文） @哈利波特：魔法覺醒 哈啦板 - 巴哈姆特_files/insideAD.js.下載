(function(window, $, undefined) {
'use strict';
function getIndex(adnum) {
var adIndex = Math.floor(Math.random() * adnum);
return toCode62(adIndex);
}
var mercyad = {
ck: function(pos, m_index, adnum) {
if( adnum > 1 ) {
var get_ad_s = egg.cookie.get('ckBAHAADS'),
adIndex,
newList = {};
if( !get_ad_s ) {
adIndex = getIndex(adnum);
newList = '{"'+pos+'":{"'+m_index+'":"'+adIndex+'"}}';
} else {
var adlist = JSON.parse(get_ad_s);
if( typeof(adlist['"'+pos+'"']) === "undefined" ) {
adIndex = getIndex(adnum);
$.extend(adlist, JSON.parse('{"'+pos+'":{"'+m_index+'":"'+adIndex+'"}}'));
} else {
//有在記錄中
if( adlist['"'+pos+'"']['"'+m_index+'"'] ) {
adIndex = fromCode62(adlist['"'+pos+'"']['"'+m_index+'"']);
if( adIndex < 0 ) {
adIndex = Math.floor(Math.random() * adnum);
} else {
adIndex = ++adIndex % adnum;
}
adIndex = toCode62(adIndex);
adlist['"'+pos+'"']['"'+m_index+'"'] = adIndex;
} else {
adIndex = getIndex(adnum);
adlist['"'+pos+'"']['"'+m_index+'"'] = adIndex;
}
}
newList = JSON.stringify(adlist);
}
document.cookie = 'ckBAHAADS=' + newList + ';expires=' + new Date().toDateString() + ' 23:59:59 UTC+0800;domain=.gamer.com.tw';
return adIndex;
}
}
};
window.ADmercy = mercyad;
})(window, jQuery);